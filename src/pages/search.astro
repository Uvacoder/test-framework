---
import { formatFieldName } from "@framework/system/src/util/string-utils"
import { visuallyHidden } from "@framework/system/src/styles/utilities.css"
import BaseLayout from '../layouts/base.astro'
import Search from '../components/search.tsx'
import { getSearchData } from '../data/search-data'

const searchData = await getSearchData(import.meta.env.SNOWPACK_PUBLIC_FRAMEWORK)
---
<head>
	<meta name="description" content={`Search ${formatFieldName(import.meta.env.SNOWPACK_PUBLIC_FRAMEWORK)} resources`}/>
</head>
<BaseLayout title="Search">
	<h1 class={visuallyHidden}>Search</h1>
	<Search data={searchData} siteName={import.meta.env.SNOWPACK_PUBLIC_FRAMEWORK} client:load />
</BaseLayout>